{%extends "admin/baseAdmin.html.twig" %}

{% block admincontenido %}
    <div class="col-md-4 col-md-offset-4" id="titulo">
        <h1>Listado de noticias</h1>
    </div>
    <div id="primerDiv" class="col-md-8 col-md-offset-2">
        <form action="/" method="POST">
            <table class="table table-bordered">
                <tr>
                    <th></th>
                    <th>Titulo</th>
                    <th>Autor</th>
                    <th>Fecha</th>
                    <th></th>
                {% for noticia in noticias %}
                    </tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ noticia.titulo }}</td>
                        <td>{{ noticia.user }}</td>
                        <td class="botonBorrarAlign">{{ noticia.fecha }}</td>
                        <td><button onclick="ConfirmDelete(); return false;" type="submit" class="btn btn-danger" value="{{ noticia.id }}" name="botonBorrarNoticia" >Borrar</button></td>
                    </tr>
                {% endfor %}
            </table>
        </form>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        function ConfirmDelete(elem)
        {
            var x = confirm("Â¿Seguro que quieres eliminar esta noticia ?");
            if (x)
                document.getElementById(this).submit();
            else
                return false;
        }
    </script>
{% endblock %}

