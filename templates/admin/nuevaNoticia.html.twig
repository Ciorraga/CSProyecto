{%extends "admin/baseAdmin.html.twig" %}

{% block admincontenido %}
    <div class="col-md-4 col-md-offset-4" id="titulo">
        <h1>Nueva noticia</h1>
    </div>
    <div id="primerDiv" class="col-md-8 col-md-offset-2">
        <form action="/" method="POST">
            <input id="tituloNoticia" type="text" class="form-control" placeholder="Escribe aquí el título de la noticia" name="tituloNoticia">
            <textarea class="classWisi" id="id_cazary_full" name="textoNoticia"></textarea>
            <div class="col-md-4 col-md-offset-4" id="botonesFormMiCuenta">
                <button type="submit"  name="botonEnviaNoticia"  class="btn btn-primary">Publicar</button>
            </div>

        </form>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="/js/cazary.js"></script>
    <script type="text/javascript">
        (function($, window)
        {
            $(function($)
            {
                $("textarea#id_cazary_full").cazary({
                    commands: "FULL"
                });
            });
        })(jQuery, window);
    </script>
{% endblock %}

