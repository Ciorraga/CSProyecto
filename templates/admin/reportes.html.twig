{%extends "admin/baseAdmin.html.twig" %}

{% block admincontenido %}
    <div class="col-md-4 col-md-offset-4" id="titulo">
        <h1>Reportes de comentarios</h1>
    </div>
    <div id="primerDiv" class="col-md-6 col-md-offset-3">
        <form action="/" method="POST">
            <table class="table table-bordered">
                <tr>
                    <th>Reportado por:</th>
                    <th>Fecha</th>
                    <th></th>
                </tr>
                {% for reporte in reportes %}
                <tr>
                    <td>{{ reporte.user }}</td>
                    <td>{{ reporte.fecha }}</td>
                    <td>
                        <div class="btn-group">
                            <span class="btn btn-primary" value="{{ elem.id }}">Actualizar</span>
                            <button type="submit" onclick="ConfirmDelete(); return false;" name="botonBorrarReto" class="btn btn-danger" value="{{ elem.id }}">Eliminar</button>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </form>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        function ConfirmDelete(elem)
        {
            var x = confirm("Â¿Seguro que quieres eliminar esta noticia ?");
            if (x)
                document.getElementById(this).submit();
            else
                return false;
        }
    </script>
{% endblock %}

