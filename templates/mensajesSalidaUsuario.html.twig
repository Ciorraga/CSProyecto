{%extends "base.twig" %}

{% block titulo %}
    CSGOPlay | Mensajes
{% endblock %}

{% block contenido %}
    <div class="col-md-8 col-md-offset-2" style="margin-top:2%;background-color:white;padding:1.5%">
        <ul class="nav nav-tabs nav-justified">
            <li role="presentation"><a href="/entrada">Bandeja de entrada</a></li>
            <li role="presentation" class="active"><a href="/salida">Bandeja de salida</a></li>
            <li role="presentation"><a href="/nuevoMensaje">Nuevo</a></li>
        </ul>
        <form action="/" method="POST">
        <div id="a" style="text-align:center">
            <h2>Bandeja de salida</h2>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Asunto</th>
                    <th>A</th>
                    <th>Fecha</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for mensaje in mensajes %}
                    <tr>
                        <td>{{ mensaje.asunto }}</td>
                        <td>{{ mensaje.user }}</td>
                        <td>{{ mensaje.fecha }}</td>
                        <td style="text-align:right">
                            <div class="btn-group">
                                <button type="submit" name="botonMostrar_Msg_Salida" class="btn btn-success" value="{{ mensaje.id }}">Ver</button>
                                <button type="submit" name="botonBorrar_Msg_Salida" class="btn btn-danger" value="{{ mensaje.id }}">Borrar</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </form>

    </div>
{% endblock %}