{%extends "base.twig" %}

{% block titulo %}
    CSGOPlay | Registro
{% endblock %}

{% block contenido %}
<div id="h2Centrado">
    <h1>Crear nuevo usuario</h1>
</div>
<div class="col-md-8 col-md-offset-2" id="primerDiv">
    <form class="form-signin" action="/registro" method="post" id="formNuevoUsuario" enctype="multipart/form-data">
        <div class="col-md-5 col-md-offset-1">
            <div class="input-group">
                <label for="username">Usuario</label>
                <input id="user" type="text" name="user" class="form-control"  required autofocus>

                <br/><br/><br/>	<br/>
                <label for="pass1">Contraseña</label>
                <input id="pass1" type="password" name="pass1" class="form-control"  required>

                <br/><br/><br/>	<br/>
                <label for="pass2">Repita contraseña</label>
                <input id='pass2' type="password" name="pass2" class="form-control"  required>

                <br/><br/><br/><br/>
                <label for="email">E-Mail</label>
                <input id='email' type="email" name="email" class="form-control"  required>

                <br/><br/><br/><br/>
                <label for="steam">Steam</label>
                <input id='steam' type="text" name="steam" class="form-control"  required>
            </div>
        </div>

        <div class="col-md-5 col-md-offset-1">
            <div class="input-group">
                <label for="nombre">Nombre</label>
                <input id="nombre" type="text" name="nombre" class="form-control"  required>

                <br/><br/><br/>	<br/>
                <label for="apellidos">Apellidos</label>
                <input id="apellidos" type="text" name="apellidos" class="form-control">

                <br/><br/><br/><br/>
                <label for="edad">Edad</label>
                <input id='edad' type="text" name="edad" class="form-control"  required>

                <br/><br/><br/><br/>
                <label for="imagen">Imagen</label>
                <input id='imagen' type="file" name="imagenUser" id="imagenUser" class="form-control">
            </div>
        </div>
        <div class="col-md-4 col-md-offset-4" id="botonesFormMiCuenta">
            <button type="button" name="registro" onClick="envio('formNuevoUsuario')" class="btn btn-primary">Crear</button>
            <a href="/"><button class="btn btn-default">Atrás</button></a>
        </div>
    </form>
</div>
{% endblock %}
{% block scripts %}
{% endblock %}
